{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Start Backend",
        "type": "shell",
        "command": "cd server && uvicorn main:app --reload --port 11434",
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        },
      },
      {
        "label": "Start Frontend",
        "type": "shell",
        "command": "cd ui && npm run tauri dev",
        "problemMatcher": [],
      },
      {
        "label": "Run Full Dev Stack",
        "dependsOn": ["Start Backend", "Start Frontend"],
        "dependsOrder": "parallel"
      }
    ]
  }
  